<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pool1" name="p1, p2, p3" class="org.beko.spring.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" value="Postgres"/>
        <constructor-arg name="properties">
            <map>
                <entry key="url" value="postgresUrl"/>
                <entry key="password" value="123"/>
            </map>
        </constructor-arg>
        <constructor-arg name="poolSize" value="10"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="companyRepository" class="org.beko.spring.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>

</beans>

